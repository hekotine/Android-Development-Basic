<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarScrollView">

        <ImageView
            android:id="@+id/ivBgjjk"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bgjjkthree" />

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/satoru" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jujutsu Kaisen Shibuya Arc"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/ivCover"
            android:layout_marginTop="80dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:shadowColor="@color/black"
            android:shadowDx="50"
            android:shadowDy="50"
            />
        <TextView
            android:id="@+id/Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akutami"
            android:textColor="@color/white"
            android:layout_below="@+id/tvTitle"
            android:layout_toRightOf="@+id/ivCover"
            android:textSize="16dp"
            android:layout_marginTop="39dp"
            />
        <ImageView
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/baseline_star_24"
            android:layout_toRightOf="@+id/Author"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textColor="@color/white"
            android:layout_below="@id/tvTitle"
            android:layout_toRightOf="@+id/star"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2M Reviews"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/rating"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/fantasy"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ivCover"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="#6AA6F3"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fantasy"
                    android:layout_gravity="center"
                    />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/action"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ivCover"
          android:layout_centerHorizontal="true"
            android:backgroundTint="#6AA6F3"
            android:layout_marginTop="15dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action"
                    android:layout_gravity="center"
                    />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/superPower"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ivCover"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#6AA6F3"
            android:layout_marginTop="15dp"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super Power"
                    android:layout_gravity="center"
                    />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis"
            android:textSize="25sp"
            android:layout_below="@+id/fantasy"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            />

        <ScrollView
            android:id="@+id/subSynopsis"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/synopsis"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            >

                <TextView
                    android:id="@+id/isiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:justificationMode="inter_word"
