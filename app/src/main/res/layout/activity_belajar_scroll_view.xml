        </RelativeLayout>
        </ScrollView>

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            android:layout_below="@+id/subSynopsis"
            android:textSize="22sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            />
        <ScrollView
            android:id="@+id/scrollReviewer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/review"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            >
                <androidx.cardview.widget.CardView
                    android:id="@+id/pictReviewone"
                    app:cardCornerRadius="50dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="3dp"
                    >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/rias"
                            />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/riasGremory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rias Gremory"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/pictReviewone"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="13dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/commentOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="So Attractive Gojoo"
                    android:layout_below="@+id/riasGremory"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="8dp"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/pictReviewtwo"
                    app:cardCornerRadius="50dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="17dp"
                    android:layout_below="@+id/commentOne"
                    >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/luffyyea"
                            />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/luffy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monkey D. luffy"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/pictReviewone"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="13dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/commentOne"
                    />
                <TextView
                    android:id="@+id/commentTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fraudddkunaa was cryed hahahahha, imagine gojo have an six eyes power."
                    android:layout_below="@+id/luffy"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="8dp"
                    />
        </RelativeLayout>
        </ScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_below="@+id/scrollReviewer"
            android:text="Continue Reading"
            />
</RelativeLayout>
