<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="305dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:src="@drawable/part2gundam"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/tvProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gundam Age"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_below="@id/pic1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 40.0$"
        android:textColor="#006400"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_below="@id/tvProduk"
        android:layout_marginStart="20dp"
        />
    <ImageButton
        android:id="@+id/ibFavortie"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/baseline_favorite_24"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#CD1717"
        android:layout_below="@id/tvProduk"
        android:layout_marginEnd="20dp"
        />

    <ImageButton
        android:id="@+id/ibStar1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FF9800"
        />
    <ImageButton
        android:id="@+id/ibStar2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ibStar1"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FF9800"
        />
    <ImageButton
        android:id="@+id/ibStar3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ibStar2"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FF9800"
        />
    <ImageButton
        android:id="@+id/ibStar4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ibStar3"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#FF9800"
        />
    <ImageButton
        android:id="@+id/ibStar5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ibStar4"
        android:background="@drawable/baseline_star_24"
        android:backgroundTint="#C5C5C5"
        />
    <TextView
        android:id="@+id/tvRatingNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.0"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_below="@id/tvPrice"
        android:layout_toRightOf="@id/ibStar5"
        android:layout_marginStart="5dp"
        />
    <View
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B5B2B2"
        android:layout_below="@+id/tvRatingNum"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:layout_below="@+id/Line"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/subBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bandai Namco"
        android:layout_below="@+id/Line"
        android:layout_toRightOf="@+id/tvBrand"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="127dp"
        />
    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/tvBrand"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/subType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Deformed"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/subBrand"
        android:layout_toRightOf="@+id/tvType"
        android:layout_marginTop="10dp"
        android:layout_marginStart="135dp"
        />
    <TextView
        android:id="@+id/tvDimen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensional"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/subType"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/subDimen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Suit"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@+id/subType"
        android:layout_toRightOf="@+id/tvDimen"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        />

    <Button
        android:id="@+id/buttonBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subDimen"
        android:layout_marginTop="15dp"
        android:text="Buy"
        android:textSize="25sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#113795"
        />

</RelativeLayout>